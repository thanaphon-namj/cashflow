<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CashFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CashFlow.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Shell.TabBarTitleColor="#191919" Shell.TabBarUnselectedColor="#B0AAAA">
        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Reports" Icon="reports">
            <ShellContent ContentTemplate="{DataTemplate local:ReportsPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>

